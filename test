import cv2, sys, time
cap = cv2.VideoCapture(0, cv2.CAP_V4L2)
cap.set(cv2.CAP_PROP_FRAME_WIDTH, 640)
cap.set(cv2.CAP_PROP_FRAME_HEIGHT, 480)
time.sleep(0.2)
if not cap.isOpened():
    print("CAM_OPEN_FAILED"); sys.exit(1)
ret, frame = cap.read()
if not ret:
    print("FRAME_READ_FAILED"); sys.exit(1)
print("FRAME_OK shape:", frame.shape, "dtype:", frame.dtype)
cv2.imwrite("vision/debug_frame.jpg", frame)
print("Saved vision/debug_frame.jpg â€” open it on the Pi or transfer to your PC to inspect.")
cap.release()
